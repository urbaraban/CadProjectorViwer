<UserControl x:Class="MonchaCadViewer.Panels.ScrollPanelItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Border  BorderThickness="1,0,1,0" BorderBrush="Gray" Background="Gray">
        <Grid x:Name ="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="38*"/>
                <RowDefinition Height="123*"/>
                <RowDefinition Height="39*"/>
            </Grid.RowDefinitions>
            <StackPanel Panel.ZIndex="99"  Orientation="Horizontal" Margin="0,0,0,1">
                <Button x:Name="RemoveBtn" FontFamily="Segoe MDL2 Assets" Content="&#xE947;" MinWidth="25" FontSize="14" Background="Transparent" BorderThickness="0" Foreground="Red" Click="RemoveBtn_Click"/>
                <ToggleButton x:Name="SolvedToggle" FontFamily="Segoe MDL2 Assets" Content="&#xE73E;" FontSize="14" MinWidth="25"  Background="Transparent" Foreground="Green" Padding="0" BorderThickness="0" Margin="10,0,0,0" Checked="SolvedToggle_Checked" Unchecked="SolvedToggle_Checked"/>
            </StackPanel>
            <Label Padding="0" Panel.ZIndex="99"  x:Name="NameLabel" Content="Name" FontSize="11" Background="WhiteSmoke" Opacity="0.4" Grid.Row="2" Margin="0,2,0,0" MaxWidth="{Binding ActualHeight, ElementName=MainGrid, Mode=OneWay}"/>

        </Grid>
    </Border>
</UserControl>
