<Window x:Class="CadProjectorViewer.RequestLicenseCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CadProjectorViewer" 
        xmlns:tools="clr-namespace:CadProjectorSDK.Tools;assembly=CadProjectorSDK" d:DataContext="{d:DesignInstance Type=tools:LockKey}"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="RequestLicenseCode" Height="150" Width="400"
        KeyUp="Window_KeyDown">
    <Grid>
        <TextBox x:Name="RequestBox" Height="31" Margin="10,10,12,0" Text="{Binding RequestKey, Mode=OneWay}" VerticalAlignment="Top" VerticalContentAlignment="Center" IsReadOnly="True" />
        <TextBox x:Name="KeyBox" Height="31" Margin="10,46,12,0" Text="{Binding LicenseKey, Mode=TwoWay}"  VerticalAlignment="Top" VerticalContentAlignment="Center" MaxLines="1"/>
        <Button Click="Button_Click" Content="Ok" Margin="0,82,12,0" VerticalAlignment="Top" Height="27" HorizontalAlignment="Right" Width="90"/>
        <Label x:Name="SuccefulLbl" Content="{Binding IsLicensed}" Margin="10,82,107,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
