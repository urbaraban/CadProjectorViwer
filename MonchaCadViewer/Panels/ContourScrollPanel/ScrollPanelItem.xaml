<UserControl
    x:Class="MonchaCadViewer.Panels.ScrollPanelItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:canvasobj="clr-namespace:MonchaCadViewer.CanvasObj" d:DataContext="{d:DesignInstance Type=canvasobj:ProjectionScene}"
    d:DesignHeight="100"
    d:DesignWidth="100"
    mc:Ignorable="d"
    MouseLeftButtonUp="_viewbox_MouseLeftButtonUp"
    MouseRightButtonUp="_viewbox_MouseRightButtonUp">
    <Border
        Background="Gray"
        BorderBrush="Gray"
        BorderThickness="1">
        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="7*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>

            <Viewbox x:Name="CanvasBox" Grid.RowSpan="3" Stretch="Uniform" StretchDirection="Both">
                <Grid x:Name="CanvasGrid">
                    <Rectangle Fill="White"/>
                    <Canvas x:Name="BackCanvas" IsHitTestVisible="False">
                        <Canvas.Background>
                            <DrawingBrush TileMode="Tile" Viewport="0,0,200,200" 
                                     ViewportUnits="Absolute">
                                <DrawingBrush.Drawing>
                                    <GeometryDrawing>
                                        <GeometryDrawing.Geometry>
                                            <RectangleGeometry Rect="0,0,200,200"/>
                                        </GeometryDrawing.Geometry>
                                        <GeometryDrawing.Pen>
                                            <Pen Brush="LightGray" Thickness="5"/>
                                        </GeometryDrawing.Pen>
                                    </GeometryDrawing>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Canvas.Background>
                    </Canvas>
                    <ItemsControl ItemsSource="{Binding Objects}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <canvasobj:CadCanvas Focusable="False" ClipToBounds="True"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Grid>
            </Viewbox>
            <Rectangle Fill="Transparent" Grid.RowSpan="3" />

            <DockPanel
                Margin="0,0,0,1"
                Panel.ZIndex="99">
                <Button
                    DockPanel.Dock="Left"
                    x:Name="RemoveBtn"
                    MinWidth="25"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="RemoveBtn_Click"
                    Content="&#xE947;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="14"
                    Foreground="Red" />
                <Button
                    DockPanel.Dock="Left"
                    x:Name="RefreshBtn"
                    MinWidth="25"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="RefreshBtn_Click"
                    Content="&#xE72C;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="14"
                    Foreground="MediumBlue" />
                <ToggleButton
                    DockPanel.Dock="Right"
                    x:Name="SolvedToggle"
                    MinWidth="20"
                    Margin="10,0,0,0"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Checked="SolvedToggle_Checked"
                    Content="&#xE73E;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="14"
                    Foreground="Green"
                    Unchecked="SolvedToggle_Checked" />
            </DockPanel>
            <Label
                Content="{Binding NameID}"
                Grid.Row="2"
                MaxWidth="{Binding ActualHeight, ElementName=MainGrid, Mode=OneWay}"
                Padding="0"
                Panel.ZIndex="99"
                Background="LightGray"
                FontSize="11"
                Margin="0,0,0,0"
                Opacity="08" />
        </Grid>
    </Border>
</UserControl>
