<UserControl
    x:Class="MonchaCadViewer.Panels.CadObjectPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MonchaCadViewer.Panels"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="89.485"
    mc:Ignorable="d">
    <Grid>
        <CheckBox
            x:Name="MirrorCheck"
            Margin="5,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{DynamicResource obj_Mirror}" />
        <CheckBox
            x:Name="RenderCheck"
            Margin="5,36,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{DynamicResource obj_Render}" />
        <Label
            x:Name="label"
            Margin="72,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="X:" />
        <Label
            x:Name="label_Copy"
            Margin="72,30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Y:" />
        <mah:NumericUpDown
            x:Name="XUpDn"
            Width="102"
            Height="22"
            Margin="91,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Culture="ru-RU" />
        <mah:NumericUpDown
            x:Name="YUpDn"
            Width="102"
            Height="22"
            Margin="91,32,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <CheckBox
            x:Name="FixCheck"
            Margin="5,62,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{DynamicResource obj_Fix}" />
        <mah:NumericUpDown
            x:Name="AngleYUpDn"
            Width="104"
            Height="22"
            Margin="196,31,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Culture="ru-RU" />
        <Label
            x:Name="WidthLbl"
            Margin="304,5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{DynamicResource obj_Width}" />
        <Label
            x:Name="HeightLbl"
            Margin="305,30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{DynamicResource obj_Height}" />
        <mah:NumericUpDown
            x:Name="WidthUpDn"
            Width="102"
            Height="22"
            Margin="356,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            mah:TextBoxHelper.WatermarkTrimming="CharacterEllipsis"
            Culture="ru-RU"
            DecimalPointCorrection="Number" />
        <mah:NumericUpDown
            x:Name="HeightUpDn"
            Width="102"
            Height="22"
            Margin="356,32,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DecimalPointCorrection="Number" />
        <Label
            x:Name="label_Copy1"
            Margin="72,56,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Z:" />
        <mah:NumericUpDown
            x:Name="ZUpDn"
            Width="102"
            Height="22"
            Margin="91,58,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Label
            x:Name="HeightLbl_Copy"
            Margin="305,56,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{DynamicResource obj_Deep}" />
        <mah:NumericUpDown
            x:Name="DeepUpDn"
            Width="102"
            Height="22"
            Margin="356,58,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DecimalPointCorrection="Number" />
        <mah:NumericUpDown
            x:Name="AngleZUpDn"
            Width="104"
            Height="22"
            Margin="196,57,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Culture="ru-RU" />
        <mah:NumericUpDown
            x:Name="AngleXUpDn"
            Width="104"
            Height="22"
            Margin="196,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Culture="ru-RU" />

    </Grid>
</UserControl>
