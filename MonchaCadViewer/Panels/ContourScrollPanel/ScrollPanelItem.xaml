<UserControl
    x:Class="CadProjectorViewer.Panels.ScrollPanelItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:CadProjectorViewer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:panels="clr-namespace:CadProjectorViewer.Panels"
    xmlns:render="clr-namespace:CadProjectorViewer.ViewModel"
    xmlns:scene="clr-namespace:CadProjectorSDK.Scenes;assembly=CadProjectorSDK"
    x:Name="ItemFrame"
    d:DataContext="{d:DesignInstance Type=scene:SceneTask}"
    d:DesignHeight="100"
    d:DesignWidth="100"
    AllowDrop="False"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:CadObjectConverter x:Key="CadObjectConverter" />
            <panels:ItemConverter x:Key="ItemConverter" />
            <panels:BackColor x:Key="BackColorConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Border
        Background="Gray"
        BorderBrush="Gray"
        BorderThickness="1">
        <DockPanel LastChildFill="True">
            <Label
                Grid.Row="2"
                MaxWidth="120"
                Margin="0,0,0,0"
                Padding="3"
                Panel.ZIndex="99"
                Background="LightGray"
                Content="{Binding TaskInfo.Name}"
                DockPanel.Dock="Bottom"
                FontSize="11"
                Opacity="08" />
            <Grid
                HorizontalAlignment="Stretch"
                ClipToBounds="True"
                DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="7*" />
                </Grid.RowDefinitions>

                <Viewbox
                    x:Name="ScrollCanvasBox"
                    Grid.RowSpan="3"
                    Height="70"
                    d:DataContext="{d:DesignInstance Type=render:RenderDeviceModel}"
                    DataContext="{Binding Object, Converter={StaticResource ItemConverter}}"
                    Stretch="Uniform"
                    StretchDirection="Both">
                    <Grid Background="White">
                        <ItemsControl ItemsSource="{Binding uidObjects}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas
                                        x:Name="ScrollObjCanvas"
                                        Width="{Binding Width}"
                                        Height="{Binding Height}"
                                        d:DataContext="{d:DesignInstance Type=render:RenderDeviceModel}"
                                        DataContext="{Binding ElementName=ScrollCanvasBox, Path=DataContext}" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentPresenter>
                                        <ContentPresenter.Content>
                                            <MultiBinding Converter="{StaticResource CadObjectConverter}">
                                                <Binding Path="" />
                                                <Binding ElementName="ScrollObjCanvas" Path="DataContext" />
                                                <Binding ElementName="ItemFrame" Path="Scale" />
                                            </MultiBinding>
                                        </ContentPresenter.Content>
                                    </ContentPresenter>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Viewbox>
                <Rectangle Grid.RowSpan="3" Fill="Transparent" />

                <DockPanel
                    Margin="0,0,0,0"
                    Panel.ZIndex="99"
                    LastChildFill="False">
                    <Button
                        x:Name="RemoveBtn"
                        MinWidth="25"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="RemoveBtn_Click"
                        Content="&#xE947;"
                        DockPanel.Dock="Left"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="14"
                        Foreground="Red" />
                    <Button
                        x:Name="RefreshBtn"
                        MinWidth="25"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="RefreshBtn_Click"
                        Content="&#xE72C;"
                        DockPanel.Dock="Right"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="14"
                        Foreground="MediumBlue" />
                </DockPanel>

            </Grid>

        </DockPanel>

    </Border>
</UserControl>
