<UserControl x:Class="MonchaCadViewer.Panels.RightPanel.WorkFolderPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonchaCadViewer.Panels.RightPanel" xmlns:Properties="clr-namespace:MonchaCadViewer.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="27"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="WorkFolderBtn" Content="{DynamicResource m_Browse}" HorizontalAlignment="Left" Margin="32,10,0,10" Width="75" VerticalAlignment="Center" Click="WorkFolderBtn_Click" Height="20"/>
        <Label x:Name="WorkFolderLabel" Content="{Binding save_work_folder, Mode=OneWay}" Margin="116,6,8,4">
            <Label.DataContext>
                <Properties:Settings/>
            </Label.DataContext>
        </Label>
        <ListView x:Name="WorkFolderListBox" Margin="5,5,5,5" Grid.Row="2">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border ContextMenuClosing="Border_ContextMenuClosing">
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header = "Open editor" Tag="OpenEditor" Click="MenuItem_Click"/>
                                <MenuItem Header = "Open folder..." Tag="OpenFolder" Click="MenuItem_Click"/>
                            </ContextMenu>
                        </Border.ContextMenu>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock  Text="{Binding}" Grid.Column="0" Grid.ColumnSpan="2" MouseDown="TextBlock_MouseDownAsync"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListView>
        <Button x:Name="WorkFolderRefreshBtn"  FontFamily="Segoe MDL2 Assets" Content="&#xEDAB;" HorizontalAlignment="Left" Margin="5,10,0,10" VerticalAlignment="Center" Width="22" Height="20" Click="WorkFolderRefreshBtn_Click"/>
        <TextBox x:Name="WorkFolderFilter" Margin="5,2" Grid.Row="1" TextWrapping="Wrap" VerticalContentAlignment="Center" TextChanged="WorkFolderFilter_TextChanged" Focusable="True" GotFocus="WorkFolderFilter_GotFocus"/>

    </Grid>
</UserControl>
