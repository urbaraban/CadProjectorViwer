<Window x:Class="CadProjectorViewer.Dialogs.SceneSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CadProjectorViewer.Dialogs" 
        xmlns:cadprojectorsdk="clr-namespace:CadProjectorSDK;assembly=CadProjectorSDK" xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        d:DataContext="{d:DesignInstance Type=cadprojectorsdk:ProjectorHub}"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        x:Name="SceneSetting"
        Title="SceneSettingWindow"
        Width="350"
        SizeToContent="Height">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <!-- Theme setting -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.Blue.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="ListBox">
                <Setter Property="Height" Value="150"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5,3"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>
        <DockPanel
            LastChildFill="True"
            DockPanel.Dock="Top" 
            HorizontalAlignment="Stretch">
            <Button 
                DockPanel.Dock="Left"
                Content="+"
                Command="{Binding ElementName=SceneSetting, Path=AddSceneCommand}"
                Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>
            <Button 
                DockPanel.Dock="Right"
                Content="-"
                Command="{Binding ElementName=SceneSetting, Path=RemoveSceneCommand}"
                Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>
            
            <Controls:NumericUpDown                 
                DockPanel.Dock="Right"
                DataContext="{Binding ElementName=SceneTabs, Path=SelectedItem}"
                Value="{Binding TableID, Mode=TwoWay}"/>
            <Label
                FontSize="18"
                VerticalContentAlignment="Center"
                DockPanel.Dock="Right"
                Content="ID:"/>
            <TextBox
                DockPanel.Dock="Left"
                DataContext="{Binding ElementName=SceneTabs, Path=SelectedItem}"
                Text="{Binding NameID}"
                VerticalContentAlignment="Center"
                VerticalAlignment="Center"
            Padding="5,0"
                Height="40"/>
        </DockPanel>
        <TabControl
            x:Name="SceneTabs"
            ItemsSource="{Binding ScenesCollection}"
            DisplayMemberPath="NameID"
            SelectedIndex="0"
            SelectedItem="{Binding ScenesCollection.SelectedScene}">
        <TabControl.ContentTemplate>
            <DataTemplate>
                    <DockPanel>
                        <Grid Margin="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="10*"/>
                            </Grid.ColumnDefinitions>
                            <ListBox
                                Grid.Column="0"
                                DataContext="{Binding ElementName=SceneSetting, Path=DataContext}"
                                ItemsSource="{Binding Devices}"
                                SelectedItem="{Binding SelectDevice}"
                                DisplayMemberPath="NameID">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0}: {1}">
                                                    <Binding Path="NameID"/>
                                                    <Binding Path="IPAddress"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <DockPanel 
                                Grid.Column="1"
                                VerticalAlignment="Center">
                            <Button 
                    Content="&#xe76c;"
                    Command="{Binding ElementName=SceneSetting, Path=MigrateDeviceCommand}"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="14"
                    DockPanel.Dock="Top"/>
                            <Button 
                    Content="&#xe76b;"
                    Command="{Binding ElementName=SceneSetting, Path=RemoveDeviceCommand}"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="14"
                    DockPanel.Dock="Bottom"/>
                        </DockPanel>
                        <ListBox
                            Grid.Column="2"
                            ItemsSource="{Binding Devices}"
                            SelectedItem="{Binding SelectDevice}"
                            DisplayMemberPath="NameID">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0}: {1}">
                                                <Binding Path="NameID"/>
                                                <Binding Path="IPAddress"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                </DockPanel>
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>
    </DockPanel>

</Window>
