                                        <Controls:ToggleSwitch.DataContext>
                                            <Properties:Settings/>
                                        </Controls:ToggleSwitch.DataContext>
                                    </Controls:ToggleSwitch>
                                    <Label x:Name="KmpsNameLbl" Content="{DynamicResource common_Empty}" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="208"/>
