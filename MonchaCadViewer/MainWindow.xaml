        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:Properties="clr-namespace:MonchaCadViewer.Properties"
        xmlns:canvaspanel="clr-namespace:MonchaCadViewer.Panels.CanvasPanel"
        xmlns:panels="clr-namespace:MonchaCadViewer.Panels" 
        xmlns:convert="clr-namespace:MonchaCadViewer.Converters"
        xmlns:leftpanels="clr-namespace:MonchaCadViewer.Panels.DevicePanel.LeftPanels" 
    xmlns:rightpanel="clr-namespace:MonchaCadViewer.Panels.RightPanel" 
    xmlns:monchasdk="clr-namespace:MonchaSDK;assembly=MonchaSDK" 
    xmlns:monchacadviewer="clr-namespace:MonchaCadViewer" 
    DataContext="{Binding RelativeSource={RelativeSource Self}, Path=LaserHub}"
    x:Class="MonchaCadViewer.MainWindow"
        mc:Ignorable="d"
        Title="CUT" KeyboardNavigation.TabNavigation="None"  
    AllowDrop="True" Drop="MainCanvas_Drop"
    Height="760" Width="999" Closing="Window_Closing" Closed="Window_Closed" WindowStartupLocation="CenterScreen" Icon="logo.png" KeyUp="MainWindow1_KeyUp" WindowStyle="None" ResizeMode="CanResizeWithGrip" BorderBrush="#FFE01414" VerticalAlignment="Top" Background="White" 
    >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.Blue.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="Border" TargetType="{x:Type Border}">
                <Setter Property="BorderBrush" Value="DarkGray"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="true">
                        <Setter Property="BorderBrush" Value="CadetBlue"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="ObjCanvas" TargetType="{x:Type Border}">
                <Setter Property="BorderBrush" Value="DarkGray"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="true">
                        <Setter Property="BorderBrush" Value="CadetBlue"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <monchacadviewer:PlayBackConverter x:Key="PlayBackConverter"/>
            <monchacadviewer:MultiObjectList x:Key="MultiList"/>
        </ResourceDictionary>
    </Window.Resources>
    <Border>
        <Border.Resources>
            <convert:NotNullBool x:Key="NotNullBool"/>
        </Border.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="213"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="290"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="115"/>
                <RowDefinition Height="480*"/>
                <RowDefinition Height="97*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <DockPanel x:Name="TopBar" Grid.ColumnSpan="3" Margin="0,0,0,0" Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}" MouseLeftButtonDown="TopBar_MouseLeftButtonDown" VerticalAlignment="Top" LastChildFill="False" Height="29">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" DockPanel.Dock="Left">
                    <Menu>
                        <Image Width="25" Height="25" Margin="2" Source="logo.png"/>
                        <MenuItem Header="▼" Focusable="True">
                            <MenuItem Header="File">
                                <MenuItem Header="Browse Moncha" Click="BrowseMonchaBtn_Click"/>
                                <Separator/>
                                <MenuItem Header="Save Moncha" Click="MenuSaveBtn_Click"/>
                                <MenuItem Header="Save Moncha as..." Click="SaveAsItem_Click"/>
                                <MenuItem Header="License" Click="LincenseItem_Click"/>
                                <Separator/>
                                <MenuItem Header="Close" Click="CloseBtn_Click"/>
                            </MenuItem>
                            <MenuItem x:Name="menuLanguage" Header="Language">
                            </MenuItem>
                        </MenuItem>
                    </Menu>

                    <Separator/>
                    <Label Content="CUT — Viwer" Padding="5,2" VerticalContentAlignment="Center"/>

                    <StackPanel Margin="10,0,0,0" Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" UseLayoutRounding="True">

                        <Button x:Name="MenuSaveBtn" FontFamily="Segoe MDL2 Assets" Content="&#xE792;" Width="25" Height="25" Margin="2" Padding="0,-1,0,0" FontSize="18" BorderBrush="{x:Null}" Background="{x:Null}" Click="MenuSaveBtn_Click"/>
                        <Label x:Name="MonchaPathBox"  Margin="3"   Content="{Binding cl_moncha_path}" VerticalAlignment="Top" Grid.ColumnSpan="3" HorizontalContentAlignment="Right" RenderTransformOrigin="0.7,-1.217" FontSize="10">
                            <Label.DataContext>
                                <Properties:Settings/>
                            </Label.DataContext>
                        </Label>

                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" Margin="5,0">
                    <Controls:ToggleSwitch x:Name="ethernetToggle" VerticalAlignment="Center"  Grid.Column="2" Controls:HeaderedControlHelper.HeaderHorizontalContentAlignment="Right" Controls:HeaderedControlHelper.HeaderVerticalContentAlignment="Center" ContentDirection="LeftToRight" Width="65" Margin="0,4,0,5" Toggled="ethernetToggle_Toggled"/>
                    <Label Content="Ethernet" />
                    <Button x:Name="MinimizedBtn" FontFamily="Segoe MDL2 Assets" Content="&#xE921;" Width="25" Height="25" Margin="2" Click="MinimizedBtn_Click">

                    </Button>
                    <Button x:Name="FullSizeBtn" FontFamily="Segoe MDL2 Assets" Content="&#xE922;" Width="25" Height="25" Margin="2" Click="FullSizeBtn_Click">

                    </Button>
                    <Button x:Name="CloseBtn"  FontFamily="Segoe MDL2 Assets" Content="&#xE8BB;" Width="25" Height="25" Margin="2" Click="CloseBtn_Click">

                    </Button>
                </StackPanel>

            </DockPanel>


            <DockPanel Margin="5" Grid.Row="1">
                <ToolBar>
                    <Button x:Name="OpenBtn" AllowDrop="True" Content="{DynamicResource m_Open}" DragEnter="OpenBtn_DragEnter" DragOver="OpenBtn_DragOver" DragLeave="OpenBtn_DragLeave" Drop="OpenBtn_DragDropAsync" Click="OpenBtn_ClickAsync" Grid.ColumnSpan="2" Background="{x:Null}" BorderBrush="{x:Null}" VerticalContentAlignment="Center" Margin="0,10,0,14" Width="99" VerticalAlignment="Stretch" />
                </ToolBar>
                <ToolBarTray Orientation="Vertical">
                    <ToolBar Margin="0,0,0,0" Width="80" >
                        <Button x:Name="ClearBtn" Content="{DynamicResource edit_Clear}"  Click="ClearBtn_Click" Height="25"/>
                        <Button x:Name="Line" Content="{DynamicResource edit_Line}" Click="Line_Click" Height="25"/>
                        <Button x:Name="RectBtn" Content="{DynamicResource edit_Mask}" Click="RectBtn_Click" Height="25"/>
                    </ToolBar>
                </ToolBarTray>
            </DockPanel>
            <TabControl x:Name="tabControl1" Margin="0,0,0,0" Grid.Column="1" Grid.Row="1">
                <TabItem Header="Transform">
                    <panels:CadObjectPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=MainScene.LastSelectObject}"
                        IsEnabled="{Binding RelativeSource={RelativeSource Self}, Path=DataContext, Converter={StaticResource NotNullBool}}">
                    </panels:CadObjectPanel>
                </TabItem>
                <TabItem Header="ProjectionSetting">
                    <panels:multiplierpanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=MainScene.LastSelectObject}"
                        IsEnabled="{Binding RelativeSource={RelativeSource Self}, Path=DataContext, Converter={StaticResource NotNullBool}}"/>
                </TabItem>
            </TabControl>
            <Button x:Name="PlayBtn" Content="{DynamicResource m_Play}" 
                    Margin="10,20,10,0" 
                    Click="PlayBtn_Click" 
                    Background="{Binding Play, Converter={StaticResource PlayBackConverter}}"
                    Grid.Column="2" 
                    Grid.Row="1"/>

            <TabControl TabStripPlacement="Left" Margin="0,5,5,0" Grid.Row="2" Grid.RowSpan="2">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <ContentPresenter Content="{TemplateBinding Content}">
                                        <ContentPresenter.LayoutTransform>
                                            <RotateTransform Angle="270" />
                                        </ContentPresenter.LayoutTransform>
                                    </ContentPresenter>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Padding" Value="2" />
                    </Style>
                </TabControl.Resources>
                <TabItem Header="Device">
                    <panels:DeviceTreeTab 
                        DataContext="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        x:Name="DeviceTree" 
                        Focusable="False" 
                        Margin="0" Grid.ColumnSpan="2" Grid.Row="2"/>
                    
                </TabItem>
                <TabItem Header="Frame">
                    <leftpanels:FrameTree DataContext="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=MainScene}"/>
                </TabItem>
            </TabControl>
            <TabControl TabStripPlacement="Bottom" Margin="0,5,0,0" Grid.Column="1" Grid.Row="2">
                <TabItem Header="{DynamicResource m_CanvasTab}">
                    <canvaspanel:CadCanvasPanel x:Name="MainCanvas" DataContext="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=MainScene}" AllowDrop="True" Drop="MainCanvas_Drop"/>
                </TabItem>
                <TabItem Header="ViewPort3D" Visibility="Collapsed">
                </TabItem>
            </TabControl>
            <panels:ScrollPanel x:Name="ContourScrollPanel" Margin="0,5,0,0" Grid.Column="1" Grid.Row="3" 
                                DataContext="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=MainScene}"/>

