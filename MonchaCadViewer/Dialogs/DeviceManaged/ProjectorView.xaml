<Window x:Class="CadProjectorViewer.DeviceManaged.ProjectorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dvc="clr-namespace:CadProjectorSDK.Device;assembly=CadProjectorSDK"
        xmlns:DeviceManaged="clr-namespace:CadProjectorViewer.DeviceManaged"
        d:DataContext="{d:DesignInstance Type=dvc:LProjector}"
        x:Name="preview"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Background="Black"
        Title="ProjectorView" Height="450" Width="450"
        KeyUp="Window_KeyUp"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Window.Resources>
        <ResourceDictionary>
            <DeviceManaged:VectorObjectConverter x:Key="VObjectConverter"/>
        </ResourceDictionary>

    </Window.Resources>
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Close" Click="CloseMenuItem_Click"/>
            <MenuItem Header="Fix" Click="FixMenuItem_Click"/>
        </ContextMenu>
    </Window.ContextMenu>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ItemsControl 
            Grid.Row="0" Grid.RowSpan="3"
            ItemsSource="{Binding RenderObjects, Mode=OneWay}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas Focusable="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                         IsHitTestVisible="True" Grid.RowSpan="3" Background="Black" Height="Auto" Width="Auto"/>

                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ContentPresenter>
                        <ContentPresenter.Content>
                            <MultiBinding Converter="{StaticResource VObjectConverter}">
                                <Binding Path=""/>
                                <Binding ElementName="preview" Path="DataContext" />
                            </MultiBinding>
                        </ContentPresenter.Content>
                    </ContentPresenter>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Label Grid.Row="0" Content="{Binding NameID}" Foreground="White"/>
        <Label Grid.Row="2" Content="{Binding ScanRate, Mode=TwoWay}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
