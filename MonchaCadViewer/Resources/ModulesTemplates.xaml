<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:modules="clr-namespace:CadProjectorSDK.Device.Modules;assembly=CadProjectorSDK"
    xmlns:transforming="clr-namespace:CadProjectorSDK.Device.Modules.Transforming;assembly=CadProjectorSDK">
    <DataTemplate x:Key="BaseModule" DataType="{x:Type modules:DeviceModule}">
        <StackPanel>
            <DockPanel>
                <mah:ToggleSwitch IsOn="{Binding IsOn}" />
            </DockPanel>
            <ContentPresenter Content="{Binding .}" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate DataType="{x:Type modules:DeepFrameCutter}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="X" />
            <mah:NumericUpDown
                Grid.Row="0"
                Grid.Column="1"
                Interval="0.01"
                Maximum="1"
                Minimum="0"
                Value="{Binding X}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="Y" />
            <mah:NumericUpDown
                Grid.Row="1"
                Grid.Column="1"
                Interval="0.01"
                Maximum="1"
                Minimum="0"
                Value="{Binding Y}" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Text="Width" />
            <mah:NumericUpDown
                Grid.Row="2"
                Grid.Column="1"
                Interval="0.01"
                Maximum="1"
                Minimum="0"
                Value="{Binding Width}" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Text="Height" />
            <mah:NumericUpDown
                Grid.Row="3"
                Grid.Column="1"
                Interval="0.01"
                Maximum="1"
                Minimum="0"
                Value="{Binding Height}" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                Text="Depth" />
            <mah:NumericUpDown
                Grid.Row="4"
                Grid.Column="1"
                Maximum="1"
                Minimum="0"
                Value="{Binding Depth}" />
            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                Text="CenterX" />
            <mah:NumericUpDown
                Grid.Row="5"
                Grid.Column="1"
                Interval="0.01"
                Value="{Binding CenterX}" />
            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                Text="CenterY" />
            <mah:NumericUpDown
                Grid.Row="6"
                Grid.Column="1"
                Interval="0.01"
                Value="{Binding CenterY}" />
        </Grid>
    </DataTemplate>
    <DataTemplate DataType="{x:Type transforming:HyperbolaCorrector}">
        <StackPanel Orientation="Vertical">
            <DockPanel>
                <Label Content="Дуга" DockPanel.Dock="Left" />
                <mah:NumericUpDown
                    MinWidth="250"
                    Interval="0.01"
                    Maximum="1"
                    Minimum="0"
                    Value="{Binding KoeffC, Mode=TwoWay}" />
            </DockPanel>
            <DockPanel>
                <Label Content="Угол X" DockPanel.Dock="Left" />
                <mah:NumericUpDown
                    MinWidth="250"
                    Interval="0.01"
                    Maximum="2"
                    Minimum="0"
                    StringFormat="0.0000"
                    Value="{Binding KoeffX, Mode=TwoWay}" />
            </DockPanel>
            <DockPanel>
                <Label Content="Угол Y" DockPanel.Dock="Left" />
                <mah:NumericUpDown
                    MinWidth="150"
                    Interval="0.01"
                    Maximum="2"
                    Minimum="0"
                    StringFormat="0.0000"
                    Value="{Binding KoeffY, Mode=TwoWay}" />
            </DockPanel>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>