<Window x:Class="CadProjectorViewer.Dialogs.CameraShowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CadProjectorViewer.Dialogs"
        mc:Ignorable="d"
        Title="CameraShowDialog" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <DockPanel  DockPanel.Dock="Top"
                        Margin="20">
                <Button Content="Show"
                        DockPanel.Dock="Right" Click="Button_Click"/>
                <TextBox DockPanel.Dock="Left"
                         x:Name="AdressBox"
                      FontSize="18"/>
            </DockPanel>
            
            <Image x:Name="ImageBox"
                   DockPanel.Dock="Bottom"/>
        </DockPanel>
    </Grid>
</Window>
