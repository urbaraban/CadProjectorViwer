                                    </Grid.ColumnDefinitions>
                                    <Label x:Name="label2" Content="{DynamicResource setting_mainlabel}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="26" Width="124"/>
