<Window x:Class="CadProjectorViewer.Dialogs.SceneSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CadProjectorViewer.Dialogs" 
        xmlns:cadprojectorsdk="clr-namespace:CadProjectorSDK;assembly=CadProjectorSDK"
        d:DataContext="{d:DesignInstance Type=cadprojectorsdk:ProjectorHub}"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        x:Name="SceneSetting"
        Title="SceneSettingWindow"
        SizeToContent="WidthAndHeight">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <!-- Theme setting -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.Blue.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="ListBox">
                <Setter Property="Width" Value="150"/>
                <Setter Property="Height" Value="150"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5,3"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>
        <DockPanel
            LastChildFill="True"
            DockPanel.Dock="Top" 
            HorizontalAlignment="Stretch">
            <Button 
                DockPanel.Dock="Left"
                Content="+"
                Command="{Binding ElementName=SceneSetting, Path=AddSceneCommand}"
                Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>
            <Button 
                DockPanel.Dock="Right"
                Content="-"
                Command="{Binding ElementName=SceneSetting, Path=RemoveDeviceCommand}"
                Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>
            <TextBox
                DockPanel.Dock="Left"
                DataContext="{Binding ElementName=SceneTabs, Path=SelectedItem}"
                Text="{Binding NameID}"
                Margin="5"
                VerticalContentAlignment="Center"
                VerticalAlignment="Center"
            Padding="5,0"
                Height="40"/>
        </DockPanel>
        <TabControl
            x:Name="SceneTabs"
            ItemsSource="{Binding ScenesCollection}"
            DisplayMemberPath="NameID"
            SelectedIndex="0"
            SelectedItem="{Binding ScenesCollection.SelectedScene}">
        <TabControl.ContentTemplate>
            <DataTemplate>
                    <DockPanel>
                        <DockPanel Margin="20">
                            <ListBox
                                DataContext="{Binding ElementName=SceneSetting, Path=DataContext}"
                                ItemsSource="{Binding Devices}"
                                SelectedItem="{Binding SelectDevice}"
                                DisplayMemberPath="HWIdentifier"/>
                            <DockPanel VerticalAlignment="Center">
                            <Button 
                    Content="&#xe76c;"
                    Command="{Binding ElementName=SceneSetting, Path=MigrateDeviceCommand}"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="14"
                    DockPanel.Dock="Top"/>
                            <Button 
                    Content="&#xe76b;"
                    Command="{Binding ElementName=SceneSetting, Path=RemoveDeviceCommand}"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="14"
                    DockPanel.Dock="Bottom"/>
                        </DockPanel>
                        <ListBox
                            ItemsSource="{Binding Devices}"
                            SelectedItem="{Binding SelectDevice}"
                            DisplayMemberPath="HWIdentifier"/>
                    </DockPanel>
                </DockPanel>
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>
    </DockPanel>

</Window>
