<UserControl
    x:Class="CadProjectorViewer.Panels.DeviceItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:CadProjectorViewer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:device="clr-namespace:CadProjectorSDK.Device;assembly=CadProjectorSDK"
    xmlns:devices="clr-namespace:CadProjectorViewer.ViewModel.Devices"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="DeviceItemBlock"
    d:DataContext="{d:DesignInstance Type=devices:DeviceItemViewModel}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:DeviceItemConverter x:Key="DeviceItemConverter" />
    </UserControl.Resources>
    <Border
        Margin="5"
        DataContext="{Binding ., Converter={StaticResource DeviceItemConverter}}"
        ToolTip="{Binding IpAddress}">
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem
                    Command="{Binding ShowZoneRectCommand}"
                    Header="{DynamicResource dvc_showzone}"
                    Tag="1" />
                <MenuItem Command="{Binding ShowModulesSettingCommand}" Header="{DynamicResource dvc_show_modules}" />
                <MenuItem Command="{Binding ProjectorViewCommand}" Header="{DynamicResource dvc_ShowScreen}" />
                <MenuItem Command="{Binding GoToWebInterface}" Header="Go web" />
            </ContextMenu>
        </Border.ContextMenu>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
            <Border
                Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                Margin="3"
                CornerRadius="10">
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="Background" Value="Tomato" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                <Setter Property="Background" Value="ForestGreen" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            <CheckBox IsChecked="{Binding IsOn}" />
            <Button
                Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                Margin="2,0"
                Command="{Binding ReconnectCommand}"
                Content="&#xEDAB;"
                FontFamily="Segoe MDL2 Assets" />
            <TextBlock
                Margin="5,0,5,0"
                VerticalAlignment="Center"
                d:Text="Device"
                Text="{Binding DisplayName}">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Foreground" Value="Black" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                <Setter Property="Foreground" Value="Gray" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <Button
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding Path=ShowModulesSettingCommand}"
                Content="M" />
        </StackPanel>
    </Border>
</UserControl>
